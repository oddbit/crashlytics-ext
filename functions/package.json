{
  "name": "firebase-alerts",
  "version": "0.0.8",
  "description": "Firebase alert integration with webhook push notifications to various platforms",
  "license": "Apache-2.0",
  "homepage": "https://github.com/oddbit/firebase-alerts#readme",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "yarn build && firebase emulators:start",
    "test": "mocha -r ts-node/register test/webhook-plugins/google-chat.spec.ts --timeout 0 --exit",
    "test:emulated": "yarn build && firebase emulators:exec 'yarn test'",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/src/index.js",
  "dependencies": {
    "axios": "^1.6.7",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.7.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.1",
    "@firebase/testing": "^0.20.11",
    "@types/chai": "^4.3.3",
    "@types/eslint": "^8.4.9",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.10.0",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "chai": "^4.3.6",
    "dot-env": "^0.0.1",
    "eslint": "^8.26.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.26.0",
    "firebase": "^9.13.0",
    "firebase-functions-test": "^3.1.1",
    "mocha": "^10.1.0",
    "sinon": "^14.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.5.4"
  }
}
